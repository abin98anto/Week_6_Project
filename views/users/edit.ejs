<% include("../layouts/header.ejs") %>

<img
  src="userImages/<%= user.image %>"
  alt="<%= user.image %>"
  width="100px"
  height="100px"
/>

<form action="" method="post" enctype="multipart/form-data">
  <input type="file" name="image" />
  <br /><br />
  <input
    type="hidden"
    name="user_id"
    value="<%= user._id %>"
    placeholder="Enter Name"
    required
  />
  <br /><br />
  <input
    type="text"
    name="name"
    value="<%= user.name %>"
    placeholder="Enter Name"
    required
  />
  <br /><br />
  <input
    type="email"
    name="email"
    value="<%= user.email %>"
    placeholder="Enter Email"
    required
  />
  <br /><br />
  <input
    type="text"
    name="mobile"
    value="<%= user.mobile %>"
    placeholder="Enter Moblie"
    required
  />
  <br /><br />
  <input type="submit" value="Update" />
</form>

<% include("../layouts/footer.ejs") %>
